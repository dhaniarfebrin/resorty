@model IEnumerable<resorty.Models.Reservation>

@{
    ViewData["Title"] = "Reservations";
    Layout = "_Layout";
}

<div class="d-flex mt-3 align-items-center mb-5">
    <h1 class="m-0">Reservations</h1>
    <div class="w-100 d-flex">
        <a asp-action="Create" class="btn btn-lg btn-primary ms-auto">Make Reservation</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="bg-white shadow-sm p-4">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Room)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EndDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PriceTotal)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Room)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                Rp. @Html.DisplayFor(modelItem => item.PriceTotal)
                            </td>
                            <td> 
                                <a asp-action="Cancel" asp-route-id="@item.Id">Cancel</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

